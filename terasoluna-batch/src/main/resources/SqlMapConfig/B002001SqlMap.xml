<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="B002001">


	<delete id="deleteEmployees">
		DELETE FROM EMPLOYEE
	</delete>

	<insert id="insertEmployees"
		parameterClass="jp.terasoluna.batch.lite.functionsample.b002.CsvRecord">
		INSERT
		    INTO
		        EMPLOYEE (
		            EMPLOYEE_ID
		            ,EMPLOYEE_FAMILY_NAME
		            ,EMPLOYEE_FIRST_NAME
		            ,EMPLOYEE_AGE
		        )
		    VALUES (
		        #id#
		        ,#familyName#
		        ,#firstName#
		        ,#age#
		    )
	</insert>

</sqlMap>